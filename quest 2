#include <iostream>
#include <string>
using namespace std;

int main() {
    string texto;
    int contador = 0;
    cout << "Informe uma string: ";
    getline(cin, texto);
    for (char c : texto) {
        if (c == 'a' || c == 'A') {
            contador++;
        }
    }
    if (contador > 0) {
        cout << "A letra 'a' aparece " << contador << " vezes na string." << endl;
    } else {
        cout << "A letra 'a' nÃ£o aparece na string." << endl;
    }
    return 0;
}
